<h1>Books</h1>

<p>Title</p><p>body</p>
<% @books.each do |book| %>

  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <span>
    <%= link_to "show", "/books/#{book.id}" %>
  </span>
<br>
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
